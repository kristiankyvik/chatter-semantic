chatter-light-blue = #FBFAFD
chatter-light-gray = #f1f0f3
chatter-white = #fff
chatter-trans-gray = rgba(96,104,110,.8)
chatter-green = #D4F2FC
chatter-blue = #1b9dfc
chatter-meta-gray = #ccccd2

body
    background-color: transparent
    #login-buttons
        visibility: hidden

.chatter
    background-color: chatter-light-blue !important

    p.gray-text
        color: chatter-trans-gray
        font-style: italic

    .padded
        padding: 14px 14px 0

    .wrapper
        position: absolute
        height: 100%
        width: 100%
        top: 0
        bottom: 0
        z-index: -1

        .scrollable
            position: absolute
            width: 100%
            overflow: hidden
            overflow-y: auto
            top: 40px
            bottom: 56px

    .ui.divider
        margin: 0.2rem 0rem

    .ui.secondary.pointing.menu
        background-color: chatter-white
        margin: 0 !important
        >.right, >.left
            min-width: 90px
            .icon.item
                min-width: 45px
        .header
            flex-grow: 1
            .status
                text-align center
                display: block
                width: 100%

    .roomList
        .count
            color: chatter-trans-gray
            font-size: 15px
        .active-rooms
            padding-bottom: 10px
        .roomListBtn
            text-align: center
            cursor: pointer
            color: chatter-trans-gray
            font-size: 10px
            text-transform: uppercase
        .ui.list .item
            padding-top: 16px
            padding-bottom: 16px
            .ui.avatar.image
                width: 3em
                height: 3em
            .content
                width: 85%
                padding-left: 0.8em
                .header, .description
                    color: chatter-trans-gray
                .header
                    font-size: 1.1em
                    .roomName
                        max-width: 60%
                        overflow: hidden
                        text-overflow: ellipsis
                        white-space: nowrap
                        float: left
                    .meta
                        display: block
                        float: right
                        font-weight: 400
                        font-size: 0.8em
                        line-height: 20px
                .description
                    width: 100%
                    padding-top: 8px
                    .preview
                        display: inline-block
                        width: 85%
                        overflow: hidden
                        text-overflow: ellipsis
                        white-space: nowrap
                    .counter
                        display: inline-block
                        width: 15%
                        text-align: right
                        font-size: 0.8em
                        span
                            border-radius: 1rem
                            background-color: chatter-blue
                            color: white
                            padding: 2px 5px

    .btn-wrapper
        position: absolute
        bottom: 0
        width: 100%
        padding: 7px 14px 7px

    .room
        margin: 0 !important

        &.ui.comments
            .date-banner
                width: 100%
                text-align: center
                font-weight: bold
                font-size: 0.9em

            .comment
                text-align: left
                margin: 0 0 3px
                padding: 0

                .nickname
                    padding-left: 3.6em
                    line-height: 17px
                    color: chatter-meta-gray
                    font-size: 0.85em
                div .content
                    max-width: 257px
                    padding: 5px 10px
                    background-color: chatter-light-gray
                    border-radius: 1em
                    margin-left: 0.6em
                    display: inline-block
                    .text
                        margin: 0.1em 0em 0.1em
                .avatar
                    width: 2em
                    img
                        border-radius: 1rem
                .time-ago
                    line-height: 17px
                    color: chatter-meta-gray
                    font-size: 0.85em
                    padding-left: 37px

                &.yours
                    text-align: right
                    .nickname
                        display: none
                    .author, .date, .content .text
                        color: rgba(0, 0, 0, 0.87)

                     div .content
                        text-align: left
                        margin-left: 0
                        display: inline-block
                        background-color: chatter-green
                    .avatar
                        float: right
                        display: none
                    .time-ago
                        padding-left: 0
                        padding-right: 13px
    .newRoom
        #multi-select .ui.label img
            height: 1.2em !important
        .ui.button
           display: block
           margin: 20px auto
    .writer
        position: absolute
        width: 100%
        bottom: 0
        padding: 7px 14px 7px

        textarea
            max-height: 250px
            min-height: 41px
            border-size: 2px
            vertical-align: middle
            resize: none

    .settings
        .ui.list
            > .item > i.icon
                padding-right: 0
                font-size: 1.7em
        .addUserItem
            cursor: pointer
        .inviter
            .ui.button.primary
                margin-top: 10px

.chatter-open.ui.button
    font-size: 2.2em
    padding: 0.4em 0.5em
    opacity: 1
    position: fixed
    bottom: 3%
    right: 12px
    box-shadow: 0 6px 13px 0 rgba(0,0,0,.23)
    border-radius: 100px

    i.icon
        margin: 0
        color: #fff

